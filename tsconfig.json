{
    "compilerOptions": {
      "module": "CommonJS",
      "outDir": "build",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "declaration": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"],
    "typedocOptions": {
      "entryPoints": ["src/index.ts"],
      "out": "docs"
  }
}